<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/left_card"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/spoken_flag"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left|center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pakistani_flag"
                        android:gravity="left|center"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_spoken"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_margin="5dp"
                        android:layout_weight="8"
                        android:gravity="start"
                        android:text="Hellwaskjdfhdjashgfkjsabdk ay?"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"/>

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/spoken_menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="right|center"
                        android:src="@drawable/ic_menu"
                        app:menu="@menu/conversation_menu"/>


            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_below="@id/text_spoken"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/translationLanguageFlag"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left|center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pakistani_flag"
                        android:gravity="left|center"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/language2_Name_for_speak"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left|center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="left|center"
                        android:text="language2"
                        android:textColor="@color/white"
                        android:visibility="gone"/>




                    <TextView
                        android:id="@+id/text_translation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_margin="5dp"
                        android:layout_weight="8"
                        android:gravity="start"
                        android:text="Hellwaskjdfhdjashgfkjsabdk ay?"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                         />

                <ImageButton
                    android:id="@+id/speakBtnInConversation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/speaker_gray"
                    android:layout_margin="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white"
                  />
                <ImageButton
                    android:id="@+id/speakBtnStopInConversation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/stop"
                    android:layout_margin="5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/white"
                    android:visibility="gone"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>